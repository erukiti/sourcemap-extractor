{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
